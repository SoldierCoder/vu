<%= form_for @campaign do |f| %>
  <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :target %><br />
      <%= f.text_field :target %>
    </p>
    <% f.fields_for :canned_tweets do |builder| %>
       <%= render 'canned_tweet_fields', :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "Add Sample Tweet", f, :canned_tweets %>
       
        
    <p><%= f.submit "Submit" %></p>
<% end %>
